{
    "manifest_version": 3,
    "name": "Zillow Primary Image Scraper",
    "version": "1.0",
    "description": "Easily copy the URL of the primary listing photo from a Zillow page.",
    "permissions": [
      "activeTab",
      "scripting",
      "clipboardWrite"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.jpeg",
        "32": "images/icon32.jpeg",
        "48": "images/icon48.jpeg",
        "128": "images/icon128.jpeg"
      }
    },
    "icons": {
      "16": "images/icon16.jpeg",
      "32": "images/icon32.jpeg",
      "48": "images/icon48.jpeg",
      "128": "images/icon128.jpeg"
    },
    "content_scripts": [
      {
        "matches": ["*://*.zillow.com/homedetails/*"],
        "js": ["content.js"]
      }
    ]
  }
  